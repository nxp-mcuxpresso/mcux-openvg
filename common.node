#
# common makefile for the node.
#

##################################################################################
#Specify the target.

.PHONY: all clean install $(MODULES)

all: $(MAIN_MODULE)

clean: all
clean: V_TARGET := clean

install: all
install: V_TARGET := install

$(MODULES):
	@test ! -d $@ || $(MAKE) --makefile=makefile.linux --directory=$@ $(V_TARGET)
