
DEBUG       ?= 0
CPU_ARCH    ?= armv7-a
FLOAT_ABI   ?=
ENABLE_PCIE ?= 0

ifneq ($(CPU_ARCH),0)
CFLAGS += -march=$(CPU_ARCH)
endif
ifneq ($(FPU),)
  CFLAGS += -mfpu=$(FPU)
endif
ifneq ($(FLOAT_ABI),)
  CFLAGS += -mfloat-abi=$(FLOAT_ABI)
endif

CFLAGS += -fPIC -std=c99 -fno-strict-aliasing -DLINUX

ifeq ($(DEBUG), 1)
CFLAGS += -g -O0 -DDEBUG -D_DEBUG
else
CFLAGS += -O2
endif

